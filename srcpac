ver=0.1

[ -f /etc/abs/abs.conf ] && source /etc/abs/abs.conf

usage()
{
	echo "usage:  srcpac {-h --help}"
	echo "        srcpac {-V --version}"
	echo "        srcpac {-A --add}     [options] <file>"
	echo "        srcpac {-R --remove}  [options] <package>"
	echo "        srcpac {-U --upgrade} [options] <file>"
	echo "        srcpac {-F --freshen} [options] <file>"
	echo "        srcpac {-Q --query}   [options] [package]"
	echo "        srcpac {-S --sync}    [options] [package]"
	echo
	echo "use 'srcpac --help' with other options for more syntax"
}

version()
{
	echo "                       Srcpac v$ver"
	echo "                       Copyright (C) 2004 Jason Chu <jason@archlinux.org>"
	echo
	echo "                       This program may be freely redistributed under"
	echo "                       the terms of the GNU General Public License"
	pacman -V

	exit 0
}

strip_url()
{
	echo $1 | sed 's|^.*://.*/||g'
}

build_packages()
{
	while [ $# -ne 0 ]; do
		i=$1
		candidates=`find $ABSROOT -type d -name $i`
		if [ "$candidates" = "" ]; then
			echo "Error: Could not find \"$i\" under $ABSROOT"

			exit 1
		fi
		success=0
		for pkgdir in $candidates; do
			if [ -f $pkgdir/PKGBUILD ]; then
				cd $pkgdir
				makepkg -cbrfw /var/cache/pacman/pkg
				if [ $? -eq 0 ]; then
					success=1
					break
				fi
			fi
		done
		if [ $success -eq 0 ]; then
			echo "Error: Failed to build \"$i\""

			exit 1
		fi
		shift
	done
}

build_and_install_packages()
{
	while [ $# -ne 0 ]; do
		i=$1
		iorg=$i
		i=${i%-*-*}
		candidates=`find $ABSROOT -type d -name $i`
		if [ "$candidates" = "" ]; then
			echo "Error: Could not find \"$i\" under $ABSROOT"

			exit 1
		fi
		success=0
		for pkgdir in $candidates; do
			if [ -f $pkgdir/PKGBUILD ]; then
				cd $pkgdir
				makepkg -icfw /var/cache/pacman/pkg
				if [ $? -eq 0 ]; then
					success=1
					break
				fi
			fi
		done
		if [ $success -eq 0 ]; then
			echo "Error: Failed to build \"$i\""

			exit 1
		fi

		if [ ! -d /var/lib/srcpac ]; then
			mkdir /var/lib/srcpac
		fi

		touch /var/lib/srcpac/$i
		shift
	done
}


# Options
MAJOR=""
INFO=0
FORCE=0
ROOT=0
NEWROOT=""
NODEPS=0
BUILD=0
REFRESH=0
SYSUPGRADE=0
DOWNLOAD=0

ARGLIST=$@
ARGSANS=""

declare -a args

while [ "$#" -ne "0" ]; do
	case $1 in
		--help)
				usage
				exit 0
				;;
		--version) version ;;
		--add)
			MAJOR="add"
			ARGSANS="$ARGSANS $1"
			;;
		--remove)
			MAJOR="remove"
			ARGSANS="$ARGSANS $1"
			;;
		--upgrade)
			MAJOR="upgrade"
			ARGSANS="$ARGSANS $1"
			;;
		--freshen)
			MAJOR="freshen"
			ARGSANS="$ARGSANS $1"
			;;
		--query)
			MAJOR="query"
			ARGSANS="$ARGSANS $1"
			;;
		--sync)
			MAJOR="sync"
			ARGSANS="$ARGSANS $1"
			;;
		--info)
			INFO=1
			ARGSANS="$ARGSANS $1"
			;;
		--force)
			FORCE=1
			ARGSANS="$ARGSANS $1"
			;;
		--root)
			ROOT=1
			NEWROOT="$2"
			ARGSANS="$ARGSANS $1 $2"
			shift
			;;
		--nodeps)
			NODEPS=1
			ARGSANS="$ARGSANS $1"
			;;
		--build)
			BUILD=1
			ARGSANS="$ARGSANS $1"
			;;
		--refresh)
			REFRESH=1
			ARGSANS="$ARGSANS $1"
			;;
		--sysupgrade)
			SYSUPGRADE=1
			ARGSANS="$ARGSANS $1"
			;;
		--downloadonly)
			DOWNLOAD=1
			ARGSANS="$ARGSANS $1"
			;;
		--*)
			usage
			exit 1
			;;
		-*)
			ARGSANS="$ARGSANS $1"
			if [ `echo $1 | grep r` ]; then
				OPTIONAL=$2
			fi
			while getopts "VARUFQSidfbyur:w" opt $1 $OPTIONAL; do
				case $opt in
					V) version ;;
					A) MAJOR="add" ;;
					R) MAJOR="remove" ;;
					U) MAJOR="upgrade" ;;
					F) MAJOR="freshen" ;;
					Q) MAJOR="query" ;;
					S) MAJOR="sync" ;;
					i) INFO=1 ;;
					f) FORCE=1 ;;
					r)
						ROOT=1
						NEWROOT="$OPTARG"
						;;
					d) NODEPS=1 ;;
					b) BUILD=1 ;;
					y) REFRESH=1 ;;
					u) SYSUPGRADE=1 ;;
					w) DOWNLOAD=1 ;;
				esac
			done
			;;
		*)
			args[${#args[@]}]=$1
			;;
	esac
	shift
done

if [ "$MAJOR" = "" ]; then
	usage

	exit 0
fi

if [ "$ABSROOT" = "" ]; then
	echo "Error: The ABSROOT environment variable is not defined."

	exit 1
fi

if [ "$MAJOR" = "add" -o "$MAJOR" = "remove" -o "$MAJOR" = "freshen" -o "$MAJOR" = "upgrade" ]; then
	pacman $ARGLIST

	if [ -d /var/lib/srcpac -a "$MAJOR" = "remove" ]; then
		for i in ${args[@]}; do
			if [ -f /var/lib/srcpac/$i ]; then
				echo -n "removing source reference $i... "
				rm /var/lib/srcpac/$i
				echo "done"
			fi
		done
	fi
fi

if [ "$MAJOR" = "query" ]; then
	if [ $INFO -eq 1 -a -d /var/lib/srcpac ]; then
		for arg in ${args[@]}; do
			pacman $ARGSANS $arg | head -n -1

			if [ $? -ne 0 ]; then
				exit $?
			fi

			echo -n "Source         : "
			if [ -f /var/lib/srcpac/$arg ]; then
				echo "Yes"
			else
				echo "No"
			fi
			echo
		done
	else
		pacman $ARGLIST
	fi
fi

if [ "$MAJOR" = "sync" ]; then
	if [ $BUILD -eq 0 ]; then
		if [ $SYSUPGRADE -eq 1 -a -d /var/lib/srcpac ]; then
			# TODO: Needs support for "x is up to date.  Upgrade anyway?"
			if [ $REFRESH -eq 1 ]; then
				abs
				pacman -Sy
			fi

			output=`yes "" | pacman -Spu`

			if [ $? -ne 0 ]; then
				echo output
				exit $?
			fi

			declare -a packages
			for i in $output; do
				if [ `echo $i | grep ^\\\\\\(ftp\\\\\\|http\\\\\\)` ]; then
					i=${i%.pkg.tar.gz}
					packages[${#packages[@]}]=`strip_url $i`
				fi
			done

			declare -a sourcepac
			declare -a regepac
			for i in ${packages[@]}; do
				j=${i%-*-*}
				if [ -f /var/lib/srcpac/$j ]; then
					sourcepac[${#sourcepac[@]}]=$i
				else
					regpac[${#regpac[@]}]=$j
				fi
			done

			pacargs="-S"
			[ $NODEPS -eq 1 ] && pacargs="${pacargs}d"
			[ $ROOT -eq 1 ] && pacargs="${pacargs} -r $NEWROOT"
			pacman $pacargs ${regpac[*]}
			if [ ${#sourcepac[@]} -eq 0 ]; then
				exit 0
			fi
			echo
			echo "Source Targets: ${sourcepac[*]}"
			echo
			echo -n "Proceed with upgrade? [Y/n] "
			read
			if [ "$REPLY" != "y" -a "$REPLY" != "Y" ]; then
				exit 0
			fi

			if [ $ROOT -eq 0 ]; then
				build_and_install_packages ${sourcepac[@]}
			else
				echo "This feature isn't done yet"
			fi
		else
			pacman $ARGLIST
		fi
	else
		# Insert magic here

		if [ $REFRESH -eq 1 ]; then
			abs
			pacman -Sy

			if [ ${#args[@]} -eq 0 -a $SYSUPGRADE -eq 0 ]; then
				exit 0
			fi
		fi

		if [ $DOWNLOAD -eq 1 ]; then
			build_packages ${args[@]}

			exit 0
		fi

		if [ $SYSUPGRADE -eq 1 ]; then
			# TODO: Needs support for "x is up to date.  Upgrade anyway?"
			output=`yes "" | pacman -Spu`
		else
			# TODO: Needs support for "x is up to date.  Upgrade anyway?"
			output=`yes "" | pacman -Sp ${args[*]}`
		fi

		if [ $? -ne 0 ]; then
			echo $output
			exit $?
		fi

		declare -a packages
		for i in $output; do
			if [ `echo $i | grep ^\\\\\\(ftp\\\\\\|http\\\\\\)` ]; then
				i=${i%.pkg.tar.gz}
				packages[${#packages[@]}]=`strip_url $i`
			fi
		done

		if [ ${#packages[@]} -eq 0 ]; then
			exit 0
		fi

		echo
		echo "Source Targets: ${packages[*]}"
		echo
		echo -n "Proceed with upgrade? [Y/n] "
		read
		if [ "$REPLY" != "y" -a "$REPLY" != "Y" -a "$REPLY" != "" ]; then
			exit 0
		fi

		if [ $ROOT -eq 0 ]; then
			build_and_install_packages ${packages[@]}
		else
			echo "This feature isn't done yet"
		fi
	fi
fi
